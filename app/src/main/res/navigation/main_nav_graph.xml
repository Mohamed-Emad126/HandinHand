<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/itemsFragment">

    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ItemsFragment"
        android:label="ItemsFragment" >
        <action
            android:id="@+id/action_itemsFragment_to_itemDescriptionFragment"
            app:destination="@id/itemDescriptionFragment" />
        <action
            android:id="@+id/action_itemsFragment_to_addItemFragment"
            app:destination="@id/addItemFragment"
            app:enterAnim="@anim/anim_pop_up"
            />
        <action
            android:id="@+id/action_itemsFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_notificationsFragment_to_dealFragment"
            app:destination="@id/dealFragment" />
        <action
            android:id="@+id/action_notificationsFragment_to_eventInterestersFragment"
            app:destination="@id/eventInterestersFragment" />
        <action
            android:id="@+id/action_notificationsFragment_to_serviceInterestersFragment"
            app:destination="@id/serviceInterestersFragment" />
        <action
            android:id="@+id/action_notificationsFragment_to_dealCompletedFragment"
            app:destination="@id/dealCompletedFragment" />
        <action
            android:id="@+id/action_notificationsFragment_to_acceptDealFragment"
            app:destination="@id/acceptDealFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_events" >
        <action
            android:id="@+id/action_eventsFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <action
            android:id="@+id/action_eventsFragment_to_eventDescriptionFragment"
            app:destination="@id/eventDescriptionFragment" />
        <action
            android:id="@+id/action_eventsFragment_to_addEventFragment"
            app:destination="@id/addEventFragment" />
    </fragment>
    <fragment
        android:id="@+id/handmadesFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.HandmadesFragment"
        android:label="fragment_handmades"
        tools:layout="@layout/fragment_handmades" >
        <action
            android:id="@+id/action_handmadesFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <action
            android:id="@+id/action_handmadesFragment_to_productDescriptionFragment"
            app:destination="@id/productDescriptionFragment" />
        <action
            android:id="@+id/action_handmadesFragment_to_addProductFragment"
            app:destination="@id/addProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services" >
        <action
            android:id="@+id/action_servicesFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <action
            android:id="@+id/action_servicesFragment_to_serviceDescriptionFragment"
            app:destination="@id/serviceDescriptionFragment" />
        <action
            android:id="@+id/action_servicesFragment_to_addServiceFragment"
            app:destination="@id/addServiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemDescriptionFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ItemDescriptionFragment"
        android:label="fragment_item_description"
        tools:layout="@layout/fragment_item_description" >
        <action
            android:id="@+id/action_itemDescriptionFragment_to_imagePreviewFragment"
            app:destination="@id/imagePreviewFragment" />
        <action
            android:id="@+id/action_itemDescriptionFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile"
        >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"

            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right"
            />
        <action
            android:id="@+id/action_profileFragment_to_imagePreviewFragment"
            app:destination="@id/imagePreviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.AddItemFragment"
        android:label="fragment_add_item"
        tools:layout="@layout/fragment_add_item" />
    <fragment
        android:id="@+id/logOutFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.LogOutFragment"
        android:label="fragment_log_out"
        tools:layout="@layout/fragment_log_out" />
    <fragment
        android:id="@+id/imagePreviewFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ImagePreviewFragment"
        android:label="fragment_image_preview"
        tools:layout="@layout/fragment_image_preview" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report" />
    <fragment
        android:id="@+id/eventDescriptionFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.EventDescriptionFragment"
        android:label="fragment_event_description"
        tools:layout="@layout/fragment_event_description" >
        <action
            android:id="@+id/action_eventDescriptionFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <action
            android:id="@+id/action_eventDescriptionFragment_to_imagePreviewFragment"
            app:destination="@id/imagePreviewFragment" />
    </fragment>
    <activity
        android:id="@+id/settingsActivity"
        android:name="com.example.handinhand.UI.Activities.SettingsActivity"
        android:label="activity_settings"
        tools:layout="@layout/activity_settings" />
    <activity
        android:id="@+id/aboutUsActivity"
        android:name="com.example.handinhand.UI.Activities.AboutUsActivity"
        android:label="activity_about_us"
        tools:layout="@layout/activity_about_us" />
    <activity
        android:id="@+id/licencesActivity"
        android:name="com.example.handinhand.UI.Activities.LicencesActivity"
        android:label="activity_licence"
        tools:layout="@layout/activity_licence" />
    <activity
        android:id="@+id/contactUsActivity"
        android:name="com.example.handinhand.UI.Activities.ContactUsActivity"
        android:label="activity_contact_us"
        tools:layout="@layout/activity_contact_us" />
    <fragment
        android:id="@+id/addEventFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.AddEventFragment"
        android:label="fragment_add_event"
        tools:layout="@layout/fragment_add_event" />
    <fragment
        android:id="@+id/productDescriptionFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ProductDescriptionFragment"
        android:label="fragment_product_description"
        tools:layout="@layout/fragment_product_description" >
        <action
            android:id="@+id/action_productDescriptionFragment_to_imagePreviewFragment"
            app:destination="@id/imagePreviewFragment" />
        <action
            android:id="@+id/action_productDescriptionFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
    </fragment>
    <fragment
        android:id="@+id/serviceDescriptionFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ServiceDescriptionFragment"
        android:label="fragment_service_description"
        tools:layout="@layout/fragment_service_description" >
        <action
            android:id="@+id/action_serviceDescriptionFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/addServiceFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.AddServiceFragment"
        android:label="fragment_add_service"
        tools:layout="@layout/fragment_add_service" />
    <fragment
        android:id="@+id/dealFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.DealFragment"
        android:label="fragment_deal"
        tools:layout="@layout/fragment_deal" />
    <fragment
        android:id="@+id/eventInterestersFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.EventInterestersFragment"
        android:label="fragment_event_interesters"
        tools:layout="@layout/fragment_event_interesters" />
    <fragment
        android:id="@+id/serviceInterestersFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.ServiceInterestersFragment"
        android:label="fragment_service_interesters"
        tools:layout="@layout/fragment_service_interesters" />
    <fragment
        android:id="@+id/acceptDealFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.AcceptDealFragment"
        android:label="fragment_accept_deal"
        tools:layout="@layout/fragment_accept_deal" />
    <fragment
        android:id="@+id/dealCompletedFragment"
        android:name="com.example.handinhand.UI.Fragments.MainContentActivityFragments.DealCompletedFragment"
        android:label="fragment_deal_completed"
        tools:layout="@layout/fragment_deal_completed" />
</navigation>