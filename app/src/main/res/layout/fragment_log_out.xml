<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Fragments.MainContentActivityFragments.LogOutFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_thank_you" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:text="@string/thanks_message" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/logout"
            app:backgroundTint="@color/textColorPrimary"
            app:rippleColor="@color/colorPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_logout_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@android:string/cancel"
            android:textColor="@color/textColorPrimary"
            app:strokeColor="@color/textColorPrimary"
            app:strokeWidth="1dp"
            app:rippleColor="@color/textColorPrimary"
            style="@style/Widget.MaterialComponents.Button.TextButton" />
    </LinearLayout>
</ScrollView>