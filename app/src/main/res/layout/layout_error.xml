<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        >

        <ImageView
            android:id="@+id/server_down_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_server_down"
            />
        <TextView
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/error_message_layout"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/reload"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reload"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_reenter_password_layout"
            app:rippleColor="@color/textColorPrimary"
            app:strokeColor="@color/textColorPrimary"
            app:strokeWidth="1dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>