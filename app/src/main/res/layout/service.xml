<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:id="@+id/service_material_card"
    app:rippleColor="@color/ccPrimary"
    app:cardElevation="2dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:maxHeight="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/small_bang"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/small_bang"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Test" />

            <TextView
                android:id="@+id/service_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="100"
                android:maxHeight="100dp"
                android:paddingTop="8dp"
                android:textColor="@color/ccPrimary"
                android:textSize="16sp"
                tools:text="Test" />

        </LinearLayout>

        <xyz.hanks.library.bang.SmallBangView
            android:id="@+id/small_bang"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/star_icon" />
        </xyz.hanks.library.bang.SmallBangView>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>